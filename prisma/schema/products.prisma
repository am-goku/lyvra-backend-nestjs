model Product {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  price       Float
  stock       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  deletedAt   DateTime? // ✅ Added for soft delete
  createdBy   Int
  user        User        @relation(fields: [createdBy], references: [id], onDelete: Restrict)
  categories  Category[]  @relation("ProductCategories")
  OrderItem   OrderItem[]
  CartItem    CartItem[]

  wishlists Wishlist[] @relation("WishlistProducts")

  images ProductImage[]

  // ✅ Added indexes for better query performance
  @@index([createdBy])
  @@index([deletedAt]) // For filtering out deleted products
  @@index([createdAt])
}

model ProductImage {
  id        Int      @id @default(autoincrement())
  url       String
  public_id String
  asset_id  String
  productId Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade) // ✅ Delete images when product is deleted
  createdAt DateTime @default(now())

  @@index([productId]) // ✅ Index for faster product image lookups
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String?
  active      Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime? // for soft delete
  products    Product[] @relation("ProductCategories")

  image CategoryImage?

  @@index([active]) // ✅ Index for filtering active categories
  @@index([deletedAt]) // ✅ Index for filtering deleted categories
}

model CategoryImage {
  id         Int      @id @default(autoincrement())
  url        String
  public_id  String
  asset_id   String
  categoryId Int      @unique
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade) // ✅ Delete image when category is deleted
  createdAt  DateTime @default(now())
}
