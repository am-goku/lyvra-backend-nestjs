model Cart {
  id        Int        @id @default(autoincrement())
  userId    Int        @unique
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade) // âœ… Delete cart when user is deleted
  items     CartItem[]
  total     Decimal    @default(0.00) // ğŸ‘ˆ total price of all items
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id            Int     @id @default(autoincrement())
  cartId        Int
  productId     Int
  quantity      Int     @default(1)
  priceSnapshot Decimal @default(0.00) // â† snapshot price when added
  cart          Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade) // âœ… Delete items when cart is deleted
  product       Product @relation(fields: [productId], references: [id], onDelete: Restrict) // âœ… Prevent product deletion if in carts

  createdAt DateTime @default(now()) // âœ… Added timestamp
  updatedAt DateTime @updatedAt // âœ… Added timestamp

  // âœ… CRITICAL: Prevent duplicate products in same cart
  @@unique([cartId, productId])
  @@index([cartId]) // âœ… Index for faster cart lookups
  @@index([productId]) // âœ… Index for product-based queries
}
