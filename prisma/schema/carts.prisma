model Cart {
  id        Int        @id @default(autoincrement())
  userId    Int        @unique
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade) // ‚úÖ Delete cart when user is deleted
  items     CartItem[]
  couponId  Int?
  coupon    Coupon?    @relation(fields: [couponId], references: [id])
  total     Decimal    @default(0.00) // üëà total price of all items
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id            Int     @id @default(autoincrement())
  cartId        Int
  productId     Int
  quantity      Int     @default(1)
  priceSnapshot Decimal @default(0.00) // ‚Üê snapshot price when added
  cart          Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade) // ‚úÖ Delete items when cart is deleted
  product       Product @relation(fields: [productId], references: [id], onDelete: Restrict) // ‚úÖ Prevent product deletion if in carts

  createdAt DateTime @default(now()) // ‚úÖ Added timestamp
  updatedAt DateTime @updatedAt // ‚úÖ Added timestamp

  // ‚úÖ CRITICAL: Prevent duplicate products in same cart
  @@unique([cartId, productId])
  @@index([cartId]) // ‚úÖ Index for faster cart lookups
  @@index([productId]) // ‚úÖ Index for product-based queries
}
